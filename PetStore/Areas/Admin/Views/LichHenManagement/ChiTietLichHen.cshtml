@model  PagedList.IPagedList<Model.Dto.LichHenDetailDto>
@using PagedList.Mvc
@{
    ViewBag.Title = "ChiTietDonHang";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var LichHen = ViewBag.LichHen;
}


@section jsFooter{
    
}

<div class="card mb-4">
    <div class="card-header"><i class="fas fa-table mr-1"></i>Chi tiết lịch hẹn</div>
    <div class="card-body">

        <div>
            <h4>Thông tin khách hàng</h4>
            <h6>Tên khách hàng: <strong>@LichHen.TenKhachHang</strong></h6>
            <h6>Số điện thoại:  <strong>@LichHen.SoDienThoai</strong></h6>
            <h6>Email: <strong>@LichHen.Email</strong></h6>
            <h6>Thời gian tạo yêu cầu: <strong>@LichHen.CreateDate</strong></h6>
            <h6>Thời gian bắt đầu: <strong>@LichHen.GioHen ngày @LichHen.NgayHen</strong></h6>
            <h6>Giống thú cưng: <strong>@LichHen.GiongThuCung</strong></h6>
           
        </div>

        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên dịch vụ</th>
                        <th>Đơn giá</th>
                        <th>Đơn vị tính</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenDichVuChamSoc</td>
                            <td>@item.DonGia.ToString("N0")</td>
                            <td>@item.DonViTinh </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

