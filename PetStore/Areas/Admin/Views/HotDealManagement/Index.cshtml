@model  List<Model.EF.HotDeal>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card mb-4">
    <div class="card-header"><i class="fas fa-table mr-1"></i>Quản lý HotDeal</div>
    <div class="card-body">

        @using (Html.BeginForm("Index", "HotDealManagement", FormMethod.Get))
        {
            <div class="row" style="padding-bottom: 5px ">
                <div class="col-sm-8">
                    <a type="button" class="btn btn-primary" href="/Admin/HotDealManagement/Create">Tạo mới</a>
                </div>
                
            </div>

        }
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID HotDeal</th>
                        <th>ID Pet</th>
                        <th>Giá khuyến mãi</th>
                        <th>#</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID_HotDeal">
                            <td>@item.ID_Item</td>
                            <td>@item.GiaKhuyenMai</td>
                            <td>
                                <a href="/Admin/HotDealManagement/Edit/@item.ID_HotDeal">Sửa</a>
                                |
                                @Ajax.ActionLink("Xóa", "Delete", new { id = item.ID_HotDeal }, new AjaxOptions
                            {
                               Confirm = "Xác nhận xóa",
                               OnComplete = "$('#row_" + @item.ID_HotDeal + "').remove()",
                               HttpMethod = "Delete"
                            })
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>