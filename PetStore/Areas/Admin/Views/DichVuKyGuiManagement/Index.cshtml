@model  List<Model.EF.DichVuKyGui>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card mb-4">
    <div class="card-header"><i class="fas fa-table mr-1"></i>Quản lý dịch vụ ký gửi</div>
    <div class="card-body">

        @using (Html.BeginForm("Index", "DichVuKyGuiManagement", FormMethod.Get))
        {
            <div class="row" style="padding-bottom: 5px ">
                <div class="col-sm-8">
                    <a type="button" class="btn btn-primary" href="/Admin/DichVuKyGuiManagement/Create">Tạo mới</a>
                </div>
            </div>

        }

        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID Gói ký gửi</th>
                        <th>Tên gói ký gửi</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID_DichVuKyGui">
                            <td>@item.ID_DichVuKyGui</td>
                            <td>@item.TenDichVuKyGui</td>
                            <td>
                                <a href="/Admin/DichVuKyGuiManagement/Edit/@item.ID_DichVuKyGui">Sửa</a>
                                |
                                @Ajax.ActionLink("Xóa", "Delete", new { id = item.ID_DichVuKyGui }, new AjaxOptions
                           {
                               Confirm = "Xác nhận xóa",
                               OnComplete = "$('#row_" + @item.ID_DichVuKyGui + "').remove()",
                               HttpMethod = "Delete"
                           })
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

