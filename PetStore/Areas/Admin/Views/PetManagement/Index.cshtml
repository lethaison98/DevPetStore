
@model  PagedList.IPagedList<Model.EF.Pet>
@using PagedList.Mvc
@{
    ViewBag.Title = "Quản lý Pet";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card mb-4">
    <div class="card-header"><i class="fas fa-table mr-1"></i>Quản lý Pet</div>
    <div class="card-body">

        @using (Html.BeginForm("Index", "PetManagement", FormMethod.Get))
        {
            <div class="row" style="padding-bottom: 5px ">
                <div class="col-sm-8">
                    <a type="button" class="btn btn-primary" href="/Admin/PetManagement/Create">Tạo mới</a>
                </div>
                <div class="col-sm-4">
                    <input type="text" name="searchString" />
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>

        }

        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên Pet</th>
                        <th>Giống Pet</th>
                        @*<th>Mô tả</th>*@
                        @*<th>Hình ảnh</th>*@
                        @*<th>Chi tiết</th>*@
                        <th>Màu Lông</th>
                        <th>Nguồn gốc</th>
                        <th>Giá tiền</th>
                        <th>Giới tính (Đực)</th>
                        <th>Status</th>
                        @*<th>Meta Title</th>*@
                        <th>#</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Tên Pet</th>
                        <th>Giống Pet</th>
                        @*<th>Mô tả</th>*@
                        @*<th>Hình ảnh</th>*@
                        @*<th>Chi tiết</th>*@
                        <th>Màu Lông</th>
                        <th>Nguồn gốc</th>
                        <th>Giá tiền</th>
                        <th>Giới tính (Đực)</th>
                        <th>Status</th>
                        @*<th>Meta Title</th>*@
                        <th>#</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID_Item">
                            <td>@item.Ten_Pet</td>
                            <td>@item.ID_GiongPet</td>
                            @*<td>@item.MoTa</td>*@
                            @*<td>@item.Image</td>*@
                            @*<td>@item.ChiTiet</td>*@
                            <td>@item.MauLong</td>
                            <td>@item.NguonGoc</td>
                            <td>@item.GiaTien.GetValueOrDefault(0).ToString("N0")</td>
                            <td>@item.GioiTinh</td>
                            <td>@item.Status</td>
                            @*<td>@item.MetaTitle</td>*@
                            <td>
                                <a href="/Admin/PetManagement/Edit/@item.ID_Item">Sửa</a>
                                |
                                @Ajax.ActionLink("Xóa", "Delete", new { id = item.ID_Item }, new AjaxOptions
                            {
                               Confirm = "Xác nhận xóa",
                               OnComplete = "$('#row_" + @item.ID_Item + "').remove()",
                               HttpMethod = "Delete"
                            })
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
            @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))
        </div>
    </div>
</div>