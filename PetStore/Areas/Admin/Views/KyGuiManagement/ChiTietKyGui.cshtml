@model  Model.Dto.KyGuiChiTietDto
@using PagedList.Mvc
@{
    ViewBag.Title = "ChiTietDonHang";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}


@section jsFooter{

}

<div class="card mb-4">
    <div class="card-header"><i class="fas fa-table mr-1"></i>Quản lý Đơn Hàng</div>
    <div class="card-body">

        <div>
            <h4>Thông tin khách hàng</h4>
            <h6>Tên khách hàng: @Model.TenKhachHang</h6>
            <h6>Số điện thoại: @Model.SoDienThoai</h6>
            <h6>Địa chỉ: @Model.Email</h6>

            <h4>Thông tin thú cưng</h4>
            <h6>Tên thú cưng: @Model.TenPet</h6>
            <h6>Loại thú cưng: @Model.LoaiThuCung</h6>>
            <h6>Cân nặng: @Model.CanNang</h6>
            <h6>Số tháng: @Model.SoThang</h6>
            <h6>Giới tính: @Model.GioiTinh</h6>

            <h4>Thông tin ký gửi </h4>
            <h6>Trạng thái ký gửi: @Model.TenTrangThaiLichHen</h6>
            <h6>Thời gian tạo yêu cầu: @Model.CreateDate</h6>
            <h6>Thời gian bắt đầu: @Model.TuGio ngày @Model.TuNgay</h6>
            <h6>Thời gian kết thúc @Model.DenGio ngày @Model.DenNgay</h6>
            <h6>Đón trả thú cưng tại nhà: @Model.DonTraTaiNha</h6>
            <h6>Địa chỉ đón trả: @Model.DiaChiDonTra</h6>
            <h6>Ghi chú: @Model.GhiChu</h6>

        </div>
    </div>
</div>

