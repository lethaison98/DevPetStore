@model List<Model.Dto.DonHangDto>
@{
    ViewBag.Title = "DonHangCuaToi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal tong = 0;
}
@section jsFooter{

    <script src="/assets/client/js/controller/CartController.js"></script>
}
<!-- breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a href="~/Home"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</a></li>
            <li class="active">Tài khoản</li>
            <li class="active">Đơn hàng của tôi</li>

        </ol>
    </div>
</div>
<!-- //breadcrumbs -->

<div class="checkout">
    <div class="container">
        @if (@Model.Count > 0)
        {
            <div class="checkout-right animated wow slideInUp" data-wow-delay=".5s">
                @foreach (var item in Model)
                {
                    <table class="timetable_sub">
                        <thead>
                            <tr>
                                <th>Ngày tạo</th>
                                <th>Tên người nhận</th>
                                <th>Số điện thoại</th>
                                @*  <th>Địa chỉ ship</th>*@
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th style="width: 275px">Thao tác</th>
                            </tr>
                        </thead>

                        <tbody>

                            <tr id="row_@item.ID_DonHang">

                                <td>@item.CreateDate</td>
                                <td>@item.ShipName</td>
                                <td>@item.ShipMobile</td>
                                @*<td>@item.ShipAddress</td>*@
                                <td>@item.TongTien.ToString("N0")</td>
                                <td>@item.TenTrangThaiDonHang</td>
                                <td style="width: 275px">
                                    <a href="/Admin/DonHangManagement/ChiTietDonHang/@item.ID_DonHang" class="btn btn-secondary btn-sm" style="width:80px"> Chi tiết</a>
                                    <button class="btn-tuChoi btn btn-danger btn-sm" style="width:80px" data-id="@item.ID_DonHang">Hủy đơn hàng</button>

                                </td>
                            </tr>


                        </tbody>

                    </table>

                    <br />
                    <br />
                    <br />
                    <br />
                }
            </div>

        }
        else
        {
            <h3><span>Bạn chưa có đơn hàng nào</span></h3>
        }
    </div>
</div>
