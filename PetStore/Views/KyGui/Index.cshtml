                @Html.EditorFor(model => model.DiaChiDonTra, new { htmlAttributes = new { @placeholder = "Địa chỉ đón trả (Nếu đón trả tại nhà)", autocomplete = "off" } })
            </div>
            <h3 class="inner-hdng-agileinfo" style="display:inline-block">Ghi chú</h3>
