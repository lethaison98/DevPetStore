
@model PetStore.Models.KyGuiModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section jsFooter{

    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Assets/Client/js/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker,#datepicker1,#datepicker2,#datepicker3").datepicker({ dateFormat: 'dd-mm-yy' });
        });
    </script>

}
<script type="application/x-javascript">
    addEventListener("load", function () {
        setTimeout(hideURLbar, 0);
    }, false);

    function hideURLbar() {
        window.scrollTo(0, 1);
    }
</script>

<!-- breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a href="index.html"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</a></li>
            <li class="active">Đặt lịch ký gửi</li>
        </ol>
    </div>
</div>
<!-- //breadcrumbs -->
<div class="main-w3layouts-content" data-wow-delay=".5s">
    <div class="top-section">
        <h2 class="sub-hdng-agileits-w3layouts">Đặt lịch ký gửi</h2>
        <p>Vui lòng điền đầy đủ thông tin bên dưới
        Những trường đánh dấu * là bắt buộc
        </p>
    </div>
    <div class="w3-agile-login-form">
        <form action="#" method="post">
            <h3 class="inner-hdng-agileinfo">Thông tin liên hệ</h3>
            <div class="top-fields-wthree">
                @Html.HiddenFor(model => model.ID_KhachHang)
                <div class="input-fields-w3ls">
                    @Html.EditorFor(model => model.TenKhachHang, new { htmlAttributes = new { placeholder = "Họ tên *", required = "" } })
                </div>
                <div class="input-fields-w3ls">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "Email *", required = "" } })
                </div>
                <div class="input-fields-w3ls">
                    @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { placeholder = "Số điện thoại *", required = "" } })
                </div>
            </div>
            <h3 class="inner-hdng-agileinfo">Thông tin Thú cưng</h3>
            <div class="top-fields-wthree">
                <div class="input-fields-w3ls">
                    @Html.EditorFor(model => model.TenPet, new { htmlAttributes = new { placeholder = "Tên thường gọi *", required = "" } })
                </div>
                <div class="input-fields-w3ls">
                    @{
                        List<SelectListItem> listLoaiThu = new List<SelectListItem>();
                        listLoaiThu.Add(new SelectListItem
                        {
                            Text = "Chó",
                            Value = "Chó"
                        });
                        listLoaiThu.Add(new SelectListItem
                        {
                            Text = "Mèo",
                            Value = "Mèo",
                        });
                    }
                    @Html.DropDownListFor(model => model.LoaiThuCung, listLoaiThu, "Loại thú *", new { @onchange = "LoaiThu = this.value;", id = "country", required = "" })
                </div>
                <div class="input-fields-w3ls">
                    @Html.EditorFor(model => model.GiongThuCung, new { htmlAttributes = new { placeholder = "Giống thú cưng *", required = "" } })
                </div>

            </div>
            <div class="top-fields-wthree">
                <div class="input-fields-w3ls">
                    @{
                        List<SelectListItem> listGioiTinh = new List<SelectListItem>();
                        listGioiTinh.Add(new SelectListItem
                        {
                            Text = "Đực",
                            Value = "Đực"
                        });
                        listGioiTinh.Add(new SelectListItem
                        {
                            Text = "Cái",
                            Value = "Cái",
                        });
                    }
                    @Html.DropDownListFor(model => model.GioiTinh, listGioiTinh, "Giới tính *", new { @onchange = "GioiTinh = this.value;", id = "country", required = "" })
                </div>
                <div class="input-fields-w3ls">
                    @Html.EditorFor(model => model.SoThang, new { htmlAttributes = new { placeholder = "Số tháng", type = "text", required = "" } })
                </div>
                <div class="input-fields-w3ls">
                    @Html.EditorFor(model => model.CanNang, new { htmlAttributes = new { placeholder = "Cân nặng(Kg)", type = "text", required = "" } })
                </div>


            </div>
            <h3 class="inner-hdng-agileinfo">Thông tin đặt lịch</h3>
            <div class="mid-fields-agileits-w3layouts">
                <div class="input-fields-w3ls2">
                    @Html.EditorFor(model => model.TuNgay, new { htmlAttributes = new { placeholder = "Từ ngày *", id = "datepicker1", name = "Text", type = "text", required = "" } })

