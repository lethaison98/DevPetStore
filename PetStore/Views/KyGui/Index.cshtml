                    @Html.DropDownListFor(model => model.DenGio, listItem, "Đến giờ *", new { @onchange = "DenGio = this.value;", id = "country", required = "" })

                </div>


            </div>
            <div class="mid-fields-agileits-w3layouts">
                <div class="input-fields-w3ls2">
                    @{
                        List<SelectListItem> LoaiKyGui = new List<SelectListItem>();
                        LoaiKyGui.Add(new SelectListItem
                        {
                            Text = "Gói đặc biệt",
                            Value = "Gói đặc biệt"
                        });
                        LoaiKyGui.Add(new SelectListItem
                        {
                            Text = "Gói cao cấp",
                            Value = "Gói cao cấp",
                        });
                        LoaiKyGui.Add(new SelectListItem
                        {
                            Text = "Gói cơ bản",
                            Value = "Gói cơ bản"
                        });

                    }

                    @Html.DropDownListFor(model => model.TenLoaiKyGui, LoaiKyGui, "Loại ký gửi *", new { id = "country", required = "" })

                </div>
                <div class="input-fields-w3ls2">
                    @{
                        List<SelectListItem> DonTraTaiNha = new List<SelectListItem>();
                        DonTraTaiNha.Add(new SelectListItem
                        {
                            Text = "Đón trả tại nhà",
                            Selected = true,
                        });
                        DonTraTaiNha.Add(new SelectListItem
                        {
                            Text = "Đón trả tại cửa hàng",
                            Value = "Gói cao cấp",
                        });

                    }

                    @Html.DropDownListFor(model => model.DonTraTaiNha, DonTraTaiNha, "Đón trả pet *", new { id = "country", required = "" })

                </div>

            </div>
            <div class="input-fields-w3ls2">
                @Html.EditorFor(model => model.DiaChiDonTra, new { htmlAttributes = new { @placeholder = "Địa chỉ đón trả (Nếu đón trả tại nhà)" } })
            </div>
            <h3 class="inner-hdng-agileinfo" style="display:inline-block">Ghi chú</h3>
            <div class="input-fields-w3ls2">
                @Html.TextAreaFor(model => model.GhiChu, new { htmlAttributes = new { @placeholder = "Ghi chú" } })
            </div>
            <input type="submit" value="Xác nhận">
        </form>
    </div>
</div>
<div class="clear"></div>

