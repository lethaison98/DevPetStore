                        });

                        listItems.Add(new SelectListItem
                        {
                            Text = "17:00 - 18:00",
                            Value = "17:00 - 18:00"
                        });


                    }

                    @Html.DropDownListFor(model => model.TuGio, listItems, "Từ giờ *", new { @onchange = "TuGio = this.value;", id = "country", required = "" })

                </div>


            </div>
            <div class="mid-fields-agileits-w3layouts">
                <div class="input-fields-w3ls2">
                    @Html.EditorFor(model => model.DenNgay, new { htmlAttributes = new { placeholder = "Đến ngày *", id = "datepicker", name = "Text", type = "text", required = "" } })

                </div>
                <div class="input-fields-w3ls2">
                    @{
                        List<SelectListItem> listItem = new List<SelectListItem>();
                        listItem.Add(new SelectListItem
                        {
                            Text = "7:00 - 8:00",
