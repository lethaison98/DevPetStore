
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model PetStore.Models.LoginModel
<!-- breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a href="index.html"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</a></li>
            <li class="active">Login Page</li>
        </ol>
    </div>
</div>
<!-- //breadcrumbs -->
<!-- login -->
<div class="login">
    <div class="container">
        <h3 class="animated wow zoomIn" data-wow-delay=".5s">Đăng Nhập</h3>
        <div class="login-form-grids animated wow slideInUp" data-wow-delay=".5s">
            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                @Html.ValidationSummary(false, "", "error")
                <div class="form-group">
                    <label class="small mb-1" for="inputUsername">Tên đăng nhập</label>
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @autofocus = "autofocus" })
                </div>
                <div class="form-group">
                    <label class="small mb-1" for="inputPassword">Mật khẩu</label>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                </div>
                <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                    <input type="submit" value="Login">
                </div>

            }
        </div>
    </div>
</div>
<!-- //login -->
