<!DOCTYPE html>
<html>
<head>
    <title>PetStore</title>
    <!-- for-mobile-apps -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //for-mobile-apps -->
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Assets/Client/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Assets/Client/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Assets/Client/css/jquery-ui.css" rel="stylesheet" type="text/css" media="all"/>
    <!-- js -->
    <script src="~/Assets/Client/js/jquery.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <!-- //js -->
    <!-- cart -->
    <script src="~/Assets/Client/js/simpleCart.min.js"></script>
    <!-- cart -->
    <!-- for bootstrap working -->
    <script type="text/javascript" src="~/Assets/Client/js/bootstrap-3.1.1.min.js"></script>
    <!-- //for bootstrap working -->
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Lato:400,100,100italic,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <!-- timer -->
    <link rel="stylesheet" href="~/Assets/Client/css/jquery.countdown.css" />
    <!-- //timer -->
    <!-- animation-effect -->
    <link href="~/Assets/Client/css/animate.min.css" rel="stylesheet">
    <script src="~/Assets/Client/js/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>
    <!-- //animation-effect -->
</head>

<body>
    <!-- header -->
    @Html.Partial("~/Views/Shared/_Navigation.cshtml")
    <!-- //header -->
    <!-- banner -->
    @RenderSection("slide", required: false)
    <!-- //banner -->

    @RenderBody()

    <!-- footer -->
    @Html.Partial("~/Views/Shared/_Footer.cshtml")
    <!-- //footer -->
    @RenderSection("JsFooter", required: false)

</body>
</html>